{
  "manifest_version": 3,
  "name": "Page to Markdown",
  "version": "1.0",
  "description": "Converts the current page to Markdown and logs it to the console.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "icons": {
    "16": "icons/icon-16x16.png",
    "48": "icons/icon-48x48.png",
    "128": "icons/icon-128x128.png"
  },
  "action": {
    "default_icon": "icons/icon-48x48.png",
    "default_title": "Convert Page to Markdown"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}